    block popups

      .popup__overlay(data-popup-close="true" data-popup-overlay)

      .popup__wrap(data-popup="filling" data-popup-close="true")
        .popup.popup--filling
          button.popup__close(data-popup-close="true")

          .popup__slider-parent
            .popup__slider-heading Начинки

            .popup__slider-wrap(data-popup-slider-wrap)
              .swiper-container.popup__slider(data-popup-slider)
                .swiper-wrapper
                  .swiper-slide.popup__slide
                    .popup__slide-img-wrap
                      img.popup__slide-img(src="img/popup__slide-img-1.jpg" alt="Img")
                    .popup__slide-heading Пралине
                    .popup__slide-text Бисквит "Джоконда" на миндальной муке, шоколадное креме с бобами тонка, карамельный крем с маскарпоне, мусс на белом шоколаде с кофейной пастой, подушка из бисквитных сливок, декор из шоколадного ободка
                    button.popup__slide-btn(data-filling-btn="filling" data-filling="Пралине")
                      span.popup__slide-btn-circle
                      span.popup__slide-btn-text выбрать
                  .swiper-slide.popup__slide
                    .popup__slide-img-wrap
                      img.popup__slide-img(src="img/popup__slide-img-2.jpg" alt="Img")
                    .popup__slide-heading Медовая
                    .popup__slide-text Бисквит "Джоконда" на миндальной муке, шоколадное креме с бобами тонка, карамельный крем с маскарпоне, мусс на белом шоколаде с кофейной пастой, подушка из бисквитных сливок, декор из шоколадного ободка
                    button.popup__slide-btn.disabled(data-filling-btn="filling" data-filling="Медовая")
                      span.popup__slide-btn-circle
                      span.popup__slide-btn-text выбрать
                  .swiper-slide.popup__slide
                    .popup__slide-img-wrap
                      img.popup__slide-img(src="img/popup__slide-img-3.jpg" alt="Img")
                    .popup__slide-heading Творожная
                    .popup__slide-text Бисквит "Джоконда" на миндальной муке, шоколадное креме с бобами тонка, карамельный крем с маскарпоне, мусс на белом шоколаде с кофейной пастой, подушка из бисквитных сливок, декор из шоколадного ободка
                    button.popup__slide-btn(data-filling-btn="filling" data-filling="Творожная")
                      span.popup__slide-btn-circle
                      span.popup__slide-btn-text выбрать
                  .swiper-slide.popup__slide
                    .popup__slide-img-wrap
                      img.popup__slide-img(src="img/popup__slide-img-4.jpg" alt="Img")
                    .popup__slide-heading Шоколадная
                    .popup__slide-text Бисквит "Джоконда" на миндальной муке, шоколадное креме с бобами тонка, карамельный крем с маскарпоне, мусс на белом шоколаде с кофейной пастой, подушка из бисквитных сливок, декор из шоколадного ободка
                    button.popup__slide-btn(data-filling-btn="filling" data-filling="Шоколадная")
                      span.popup__slide-btn-circle
                      span.popup__slide-btn-text выбрать

              .popup__slider-controls
                +arrow('button', 'left')(class="arrow--lg products__slider-arrow products__slider-arrow--prev" data-popup-slider-prev="")
                +arrow('button', 'right')(class="arrow--lg products__slider-arrow products__slider-arrow--next" data-popup-slider-next="")
                .popup__slider-scrollbar-wrapper
                  .swiper-scrollbar-wrap.popup__slider-scrollbar-wrap
                    .swiper-scrollbar.popup__slider-scrollbar(data-popup-slider-scrollbar="")